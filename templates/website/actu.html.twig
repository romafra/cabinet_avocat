{% extends 'template.html.twig' %}

{% block body %}

 <!-- Liste des 4 dernières actualités -->
 <section class="prez_avocat_section">
    <div class="container">
      <p>&nbsp;</p>
      <h2 class="custom_heading">Une actualité hebdomadaire décryptée</h2>
      <hr>
{% for actu in actu %}
      <div class="row layout_padding2">
        <div class="col-md-8">
          <div class="avocat_detail-box">
            <h3>{{ actu.title }}</h3>
            <p class="mt-4 mb-5">
                {{ actu.description }}
            </p>
            {% if actu.link %}
            <!-- Affichage du bouton uniquement si un lien dans l'article est proposé -->
            <a href="{{ actu.link }}" class="custom_blue-btn_rdv mr-3">Lire la suite</a>
            {% endif %}
          </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center align-items-center">
            <div class="fruit_img-box d-flex justify-content-center align-items-center">
              <img src="{{ actu.imageurl }}" alt="{{ actu.textalt }}" class="" width="250px" />
            </div>
          </div>
      </div>
{% endfor %}
    </div>
</section>     

 <!-- Inscription à la newsletter -->
 <!-- Encre pour la relation avec le bouton du footer -->
 <div id="newsletter"></div>
 <section class="prez_avocat_section">
  <div class="container">
  <p>&nbsp;</p>
    <h2 class="custom_heading">Newsletter</h2>
    <hr>
    <div class="row layout_padding2">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8">
        <div class="avocat_detail-box" style="text-align: center;">
          <h3>Pour vous, le cabinet AGDZ reste en veille des dernières informations qui vous concerne, quelque soit votre statut</h3>
          <p class="mt-4 mb-5" style="text-align: left;">
              <form>
                <div class="form-group">
                <input type="email" placeholder="Adresse e-mail" class="form-control">
                </div>
                <div class="form-check">        
                  <input type="checkbox" id="news1" class="form-check-input">
                  <label class="form-check-label" for="news1">Droit public</label>
                </div>
                <div class="form-check">        
                  <input type="checkbox" id="news2" class="form-check-input">
                  <label class="form-check-label" for="news2">Droit privé</label>
                </div>
                <div class="form-check">        
                  <input type="checkbox" id="news3" class="form-check-input">
                  <label class="form-check-label" for="news3">Droit des affaires</label>
                </div>               
                <br><br>
                <a href="" class="text-uppercase custom_blue-btn mr-3">S'inscrire</a>
              </form>
          </p>
        </div>
      </div>
      <div class="col-md-2">&nbsp;</div>
    </div>
  </div>
</section>
{% endblock %}